<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %c{1} - %msg%n"/>
    </Console>

    <RollingFile name="MyFile" fileName="/home/admin/lvuser/atlas.log">
      <FileName>/home/admin/lvuser/atlas.log</FileName>
       <FilePattern>/home/admin/lvuser/%d{yyyy-MM-dd-hh}-%i.atlas.log.zip</FilePattern> 
      <PatternLayout> 
          <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %c{1} - %msg%n</Pattern>
      <PatternLayout>
      <Policies>
        <SizeBasedTriggerPolicy size="3 MB'/>">
      <Policies>
   </Appenders>
  
  <Loggers>
    <Logger name="frc.team6027" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>

    <Logger name="frc.team6027.robot.subsystems.ElevatorSubsystem" level="info" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="MyFile"/>
    </Root>
  </Loggers>
</Configuration>